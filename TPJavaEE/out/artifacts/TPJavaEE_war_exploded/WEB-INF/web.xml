<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>PremiereServletConfigurationXML</servlet-name>
        <servlet-class>fr.eni.javaee.module2.PremiereServletConfigurationXML</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PremiereServletConfigurationXML</servlet-name>
        <url-pattern>/modules/module2/PremiereServletConfigurationXML</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>500</error-code>
        <location>/modules/module2/Demonstration/erreur500.html</location>
    </error-page>
</web-app>